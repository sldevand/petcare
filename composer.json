{
    "name": "sldevand/petcare",
    "description": "Pet health notebook REST API",
    "keywords": [
        "pet",
        "care",
        "api",
        "rest"
    ],
    "homepage": "https://github.com/sldevand/petcare",
    "license": "MIT",
    "authors": [
        {
            "name": "SÃ©bastien Lorrain",
            "email": "sldeveloperand@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^2.4",
        "symfony/console": "^4.3",
        "symfony/dotenv": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.7",
        "guzzlehttp/guzzle": "^6.4",
        "ext-json": "*",
        "ext-yaml": "*",
        "ext-pdo": "*",
        "ext-http": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Lib\\": "lib",
            "App\\": "src/App",
            "Framework\\": "src/Framework"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public/ -ddisplay_errors=1",
        "test": "phpunit -v",
        "testDebug": "phpunit -vvv --debug"
    }
}
